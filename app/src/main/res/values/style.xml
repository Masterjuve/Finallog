<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Estilo de nuestro contenedor (Linear Layout) -->
    <style name="container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">#C5CAE9</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="panel_layout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#E8EAF6</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">5dp</item>
    </style>

    <!-- Estilo de titulos -->
    <style name="textView_title">
        <item name="android:textColor">#3B5998</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">30sp</item>
    </style>

    <!-- Estilo de textos -->
    <style name="textView">
        <item name="android:textColor">#3B5998</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:ems">10</item>
    </style>

    <!-- Estilo de Cajas de texto -->
    <style name="editTextStyle">
        <item name="android:textColor">#3B5998</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">15sp</item>
        <item name="android:ems">10</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Estilo de botones -->
    <style name="button">
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#5C6BC0</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <!-- Estilo de spinner -->
    <style name="spinner">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:focusable">true</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">15sp</item>
    </style>
</resources>